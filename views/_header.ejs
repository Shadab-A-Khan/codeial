<header id="layout-header">
    <nav>
        <div class="mini-logo">
            <p>
                <a href='/'>
                    codeial
                </a>
            </p>
        </div>

        <div class="auth-links">
            <ul>
                <% if (locals.user){ %>
                    <li>
                        <a href="/users/usersProfile/<%= u.id %>">
                            <%= user.name %>
                        </a>
                    </li>
                    <li>
                        <a href="/users/sign_out">Sign Out</a>
                    </li>
                    <% }else{ %>
                        <li>
                            <a href="/users/sign_in">Sign In</a>
                        </li>
                        <li>
                            <a href="/users/sign_up">Sign Up</a>
                        </li>

                        <% } %>
            </ul>
        </div>
    </nav>



</header>